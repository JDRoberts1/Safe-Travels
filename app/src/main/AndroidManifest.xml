<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fullsail.android.safetravels">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SafeTravels.Starting">
        <activity
            android:name=".LocationSearchActivity"
            android:exported="false" />
        <activity
            android:name=".ConversationActivity"
            android:exported="false" />
        <activity
            android:name=".UserSearchActivity"
            android:exported="false" />
        <activity
            android:name=".LaunchActivity"
            android:exported="true"
            android:theme="@style/Theme.SafeTravels.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.SafeTravels.Fullscreen" />
        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.SafeTravels.Fullscreen" />
        <activity
            android:name=".ResetPasswordActivity"
            android:exported="true"
            android:theme="@style/Theme.SafeTravels.Fullscreen" />
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.SafeTravels.Fullscreen" />
        <activity
            android:name=".FriendsActivity"
            android:exported="true"
            android:theme="@style/Theme.SafeTravels.Fullscreen" />
        <activity
            android:name=".NewPostActivity"
            android:exported="true"
            android:theme="@style/Theme.SafeTravels.Fullscreen" />
        <activity
            android:name=".ConversationListActivity"
            android:exported="true"
            android:theme="@style/Theme.SafeTravels.Fullscreen" />
        <activity
            android:name=".ProfileActivity"
            android:exported="true"
            android:theme="@style/Theme.SafeTravels.Fullscreen" />
        <activity
            android:name=".NewConversationActivity"
            android:exported="true"
            android:theme="@style/Theme.SafeTravels"
            android:parentActivityName=".ConversationListActivity"/>

    </application>

</manifest>