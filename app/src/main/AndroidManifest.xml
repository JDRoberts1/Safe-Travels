<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fullsail.android.safetravels">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation|screenSize"
        android:icon="@drawable/playstore_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/playstore_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.SafeTravels.Starting">

        <activity
            android:name=".UserValidationActivity"
            android:exported="false"
            android:label="@string/title_activity_approved_user"
            android:theme="@style/Theme.SafeTravels.Fullscreen" />
        <activity
            android:name=".EditPostActivity"
            android:exported="false"
            android:label="@string/title_edit_post"
            android:theme="@style/Theme.SafeTravels" />
        <activity
            android:name=".ViewPostActivity"
            android:exported="false"
            android:label="@string/title_view_post"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/Theme.SafeTravels" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:label="@string/title_profile"
            android:theme="@style/Theme.SafeTravels" />
        <activity
            android:name=".LocationSearchActivity"
            android:exported="false"
            android:theme="@style/Theme.SafeTravels" />
        <activity
            android:name=".ConversationActivity"
            android:exported="false"
            android:label="@string/title_conversation"
            android:parentActivityName=".ConversationListActivity"
            android:theme="@style/Theme.SafeTravels" />
        <activity
            android:name=".UserMessageSearchActivity"
            android:exported="false"
            android:parentActivityName=".ConversationListActivity"
            android:theme="@style/Theme.SafeTravels" />
        <activity
            android:name=".LaunchActivity"
            android:exported="true"
            android:theme="@style/Theme.SafeTravels.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.SafeTravels.Fullscreen" />
        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.SafeTravels.Fullscreen" />
        <activity
            android:name=".ResetPasswordActivity"
            android:exported="true"
            android:theme="@style/Theme.SafeTravels.Fullscreen" />
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:label="@string/title_home"
            android:theme="@style/Theme.SafeTravels" />
        <activity
            android:name=".FriendsActivity"
            android:exported="true"
            android:label="@string/title_friends"
            android:theme="@style/Theme.SafeTravels" />
        <activity
            android:name=".NewPostActivity"
            android:exported="true"
            android:theme="@style/Theme.SafeTravels.Fullscreen" />
        <activity
            android:name=".ConversationListActivity"
            android:exported="true"
            android:label="@string/title_messages"
            android:theme="@style/Theme.SafeTravels" />
        <activity
            android:name=".UserProfileActivity"
            android:exported="true"
            android:label="@string/title_profile"
            android:theme="@style/Theme.SafeTravels" />
        <activity
            android:name=".UserFriendSearchActivity"
            android:exported="true"
            android:theme="@style/Theme.SafeTravels.Fullscreen" />
        <activity
            android:name=".EditProfileActivity"
            android:exported="true"
            android:label="@string/title_edit_profile"
            android:theme="@style/Theme.SafeTravels" />
    </application>

</manifest>